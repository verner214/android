<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
<ImageView android:id="@+id/gallery_item_imageView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:scaleType="centerCrop" >
</ImageView>
  <TextView android:id="@+id/brygd_list_beername"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@id/gallery_item_imageView"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:text="byts ut name" 
    android:textStyle="bold"
    />
  <TextView android:id="@+id/brygd_list_beerstyle"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@id/gallery_item_imageView"
    android:layout_below="@id/brygd_list_beername"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:text="byts ut style" />
</RelativeLayout>

